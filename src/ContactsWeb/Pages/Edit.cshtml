@page "{id:int}"
@model ContactsWeb.Pages.EditModel
<div class="container mt-4">
    <h2>Edit Contact</h2>
    <form method="post">
        <input type="hidden" asp-for="Contact.Id" />
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Contact.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Contact.Email" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Update</button>
        <a asp-page="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>
